{
  "name": "my-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:mobile": "turbo dev --filter=mobile",
    "dev:api": "turbo dev --filter=api",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "mobile:start": "cd apps/mobile && npx expo start",
    "mobile:ios": "cd apps/mobile && npx expo run:ios --device",
    "mobile:android": "cd apps/mobile && npx expo run:android --device",
    "mobile:prebuild": "cd apps/mobile && npx expo prebuild",
    "mobile:prebuild:clean": "cd apps/mobile && npx expo prebuild --clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  }
}
